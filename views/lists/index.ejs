<%- include ../_partials/header.ejs %>

<h5>Featured Lists</h5>

<% lists.forEach(function(list, i) { %>
  <% if (i % 2 === 0) { %>
    <div class="row">
    <% } %>
      <div class="col s6">
        <div class="card">
          <div class="card-image">
            <% if (list.movies.length) { %>
              <a href="/lists/<%= list.id %>"><img src="https://image.tmdb.org/t/p/original<%= list.movies[0].backdrop_path %>"></a>
            <% } else { %> 
              <a href="/lists/<%= list.id %>"><img src="https://i.ytimg.com/vi/svTVRDgI08Y/maxresdefault.jpg"></a>
            <% } %>
            <a href="/lists/<%= list.id %>"><span class="card-title"><%= list.name %></span></a>
          </div>
          <div class="card-content">
            <p><%= list.summary %></p>
          </div>
          <div class="card-action">
            <p>Created by: <%= list.user.name %></p>
          </div>
        </div>
    </div>
  <% if (i % 2 === 1) { %>
  </div>
  <% } %>
<% }) %>

<%- include ../_partials/footer.ejs %>