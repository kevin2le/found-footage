<%- include ../_partials/header.ejs %>

<h1>Movies</h1>

<% moviesData.forEach(function(movie, i) { %>
  <% if (i % 4 === 0) { %>
    <div class="row">
  <% } %>
    <div class="col s3">
      <div class="card">
        <div class="card-image">      
          <a href="/movies/<%=movie.id%>">
          <img src="https://image.tmdb.org/t/p/w300/<%= movie.poster_path%>">
          <h6><%= movie.title %></h6></a>
        </div>  
      </div>
    </div>
  <% if (i % 4 === 3) { %>
    </div>      
  <% } %>
<% }) %>

<%- include ../_partials/footer.ejs %>