<%- include ../_partials/header.ejs %>

<h5>Search Results</h5>

<% if (movieSearch) { %>
  <% movieSearch.forEach(function(movie, i){ %>
    <% if (i % 4 === 0) { %>
      <div class="row">
    <% } %>
      <div class="col s3">
        <div class="card">
          <div class="card-image">      
            <a href="/movies/<%=movie.id%>">
              <% if(movie.poster_path) { %> 
                <img src="https://image.tmdb.org/t/p/w300/<%= movie.poster_path%>">
                <% } else { %>
                  <img src="http://i.imgur.com/7VuV6BI.png">
                <% } %>
            <h6><%= movie.title %></h6></a>
          </div>  
        </div>
      </div>
    <% if (i % 4 === 3) { %>
      </div>      
    <% } %>
  <% }) %>
<% } else { %>
  <h4>No movies match search</h4>
<% } %>

<%- include ../_partials/footer.ejs %>